                <h4>-</h4>
                <h2>0948.396.115</h2>
            </div>
        </div>
        <div id="body">
            <div id="navbar">
                <a href="/">
                    <i class="nut homepagebtn fal fa-map"></i>
                </a>
                <a href="/news">
                    <i class="nut newsbtn fal fa-newspaper"></i>
                </a>
                <a href="/chart">
                    <i class="nut chartbtn fal fa-analytics"></i>
                </a>
            </div>
            {{{body}}}
        </div>
    </div>

    <script>
        window.onload = function () {
            const nuts = document.querySelectorAll('.nut');
            let site = window.location.href.replace('http://localhost:3003/', '') || 'homepage';
            if (site) {
                console.log(site);
                nuts.forEach(e => {
                    e.classList.remove('active-navbar')
                })
                const nut = document.querySelector(`.nut.${site}btn`);
                nut.classList.add('active-navbar');
            }
        }
    </script>
</body>

